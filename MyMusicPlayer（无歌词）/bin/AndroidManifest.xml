<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.xm2"
    android:versionCode="1"
    android:versionName="1.0" >
	 <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>  
    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="14" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/anz"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light">
        <activity
            android:name="com.example.xm2.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <service android:name="com.example.xm2.Mservive"></service>
         <receiver android:name=".MainActivity">  
        <intent-filter>  
             <action android:name=".MainActivity"/>  
        </intent-filter>  
        </receiver>  
        
          <receiver android:name=".Mservive">  
        <intent-filter>  
             <action android:name=".Mservive"/>  
        </intent-filter>  
        </receiver>  
    </application>

</manifest>
